<%= form_for [@seller, @home, @address] do |f| %>

  <%= f.label :street %>
  <%= f.text_field :street %>

  <%= f.label :city%>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip %>
  <%= f.text_field :zip %>

  <%= f.hidden_field :seller_id, :value => @seller.id %>
  <%= f.hidden_field :home_id, :value => @home.id %>

<%= f.submit %>
<% end %>